{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/work/meshoptimizer/build/debug/meshoptimizer",
            "args": ["-d", "data/kitten.obj"],
            "stopAtEntry": false,
            "cwd": "/mnt/c/work/meshoptimizer",
            "environment": [],
